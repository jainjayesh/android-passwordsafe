<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitsetters.android.passwordsafe" android:versionCode="50" android:versionName="0.6.0">
    <application android:icon="@drawable/passicon" android:allowClearUserData="true" android:debuggable="true" android:label="@string/app_name">
        <activity class=".FrontDoor" android:name="FrontDoor" android:label="@string/app_name">
         	<intent-filter>
                <action android:name="android.intent.action.MAIN" />
		        <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <intent-filter android:label="org.openintents.action.ENCRYPT">
                <action android:name="org.openintents.action.ENCRYPT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
        	</intent-filter>
        	<intent-filter android:label="org.openintents.action.DECRYPT">
                <action android:name="org.openintents.action.DECRYPT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
        	</intent-filter>
        	<intent-filter android:label="org.openintents.action.GET_PASSWORD">
                <action android:name="org.openintents.action.GET_PASSWORD" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
        	</intent-filter>
            
        </activity>
        <activity class=".PassGen" android:name="PassGen" android:label="@string/app_name" />
        <activity class=".CategoryEdit" android:name="CategoryEdit" android:label="@string/app_name" />
        <activity class=".PassList" android:name="PassList" android:label="@string/app_name" />
        <activity class=".PassEdit" android:name="PassEdit" android:label="@string/app_name" />
        <activity class=".CategoryList" android:name="CategoryList" android:label="@string/app_name" />
        <activity class=".AskPassword" android:name="AskPassword" android:label="@string/app_name" />
        <activity class=".Help" android:name="Help" android:label="@string/app_name" />
        <activity class=".ChangePass" android:name="ChangePass" android:label="@string/app_name" />
        <activity class=".Restore" android:name="Restore" android:label="@string/app_name" />
        <service class=".FrontDoor.ServiceDispatchImpl" android:name="ServiceDispatchImpl"
            android:label="@string/app_name"
			android:permission="com.bitsetters.android.passwordsafe.ACCESS_SERVICE">
            <intent-filter>
                <action android:name="com.bitsetters.android.passwordsafe.ServiceDispatchImpl" />
            </intent-filter> 
        </service>    
    </application> 

    <permission android:name="com.bitsetters.android.passwordsafe.ACCESS_SERVICE"
			android:process=":remote"  android:exported="true"
			android:protectionLevel="signature"
			android:label="@string/permlab_service"
        	android:description="@string/permdesc_service">		
   	</permission>
    <uses-permission android:name="com.bitsetters.android.passwordsafe.ACCESS_SERVICE" />
    
</manifest> 